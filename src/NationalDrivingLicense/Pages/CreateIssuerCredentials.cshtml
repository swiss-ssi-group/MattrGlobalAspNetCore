@page
@model NationalDrivingLicense.Pages.AdminModel
@{
}

<div class="container-fluid">
    <div class="row">
        <div class="col-sm">
            <form method="post">
                <div>
                    <div class="form-group">
                        <label class="control-label">Name</label>
                        <input asp-for="IssuerCredential.CredentialName" class="form-control" />
                        <span asp-validation-for="IssuerCredential.CredentialName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        @if (Model.CreatingDriverLicense)
                        {
                            <input class="form-control"
                                   type="submit" readonly="@Model.CreatingDriverLicense"
                                   value="Create Credential Issuer" />
                        }

                    </div>
                    <div class="form-group">
                        @if (!Model.CreatingDriverLicense)
                        {
                            <div class="alert alert-success">
                                <strong>OIDC credential Issuer created</strong>
                            </div>
                        }

                        
                    </div>
                </div>
            </form>
            <hr />
            <p>When the callback is created, add this to the OIDC callback</p>
        </div>
        <div class="col-sm">
            <div>
                <img src="~/ndl_car_01.png" width="200" alt="Driver License">
                <div>
                    <b>Driver Licence Callback Credentials</b>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">Callback</dt>
                        <dd class="col-sm-8">
                            @Model.Callback
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>


