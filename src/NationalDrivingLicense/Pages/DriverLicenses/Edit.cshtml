@page
@model NationalDrivingLicense.Pages.DriverLicenses.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h4>Edit Driver Licence</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DriverLicense.Id" />
            <div class="form-group">
                <label class="control-label">@Model.DriverLicense.UserName</label>
                <input type="hidden" value="@Model.DriverLicense.UserName" />
            </div>
            <div class="form-group">
                <label class="control-label">@Model.DriverLicense.FirstName @Model.DriverLicense.Name</label>
                <input type="hidden" value="@Model.DriverLicense.Name" />
                <input type="hidden" value="@Model.DriverLicense.FirstName" />
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="DriverLicense.Valid">
                        <input class="big_checkbox" asp-for="DriverLicense.Valid" />
                        @Html.DisplayNameFor(model => model.DriverLicense.Valid)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./User" asp-route-id="@Model.DriverLicense.UserName">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
